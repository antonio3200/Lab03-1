<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.spellchecker.FXMLController">
   <top>
      <Label text="Lab03_SpellChecker" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Scegli una Lingua">
                     <HBox.margin>
                        <Insets right="10.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="cmbLingua" onAction="#doActivation" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <TextArea fx:id="txtDaCorreggere" />
            <Button fx:id="btnCorreggi" mnemonicParsing="false" onAction="#doCorreggi" text="Correggi">
               <VBox.margin>
                  <Insets left="280.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Label text="Parole Errate">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="txtCorretto">
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </TextArea>
            <HBox>
               <children>
                  <Label fx:id="lblErrori">
                     <HBox.margin>
                        <Insets right="100.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnPulisci" mnemonicParsing="false" onAction="#doPulisci" text="Pulisci Testo">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="280.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="lblTempo">
               <VBox.margin>
                  <Insets bottom="20.0" left="150.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</BorderPane>
